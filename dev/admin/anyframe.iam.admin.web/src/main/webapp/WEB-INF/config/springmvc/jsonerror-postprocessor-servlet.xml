<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
				http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
				http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd">

	<!--
		Bean 후처리기 - @JsonError 가 달려있는 메서드를 가지는 bean 의 해당 클래스/메서드 에 대해
		jsonErrorAdvisor 의 Pointcut 으로 추가함
	-->
	<bean
		class="anyframe.iam.admin.common.web.JsonErrorAdvisingBeanPostProcessor" />

	<!--
		CGLib 을 사용한 proxy 자동 생성을 위한 설정 ex.) Interface 없는 POJO 클래스인데 이에 대해
		DebugAdvisor 를 달아주려면 CGLib 으로 Proxy 처리 되어야 함.
	-->
	<aop:config proxy-target-class="false" />

	<!--
		jsonErrorAdvisor 에 제공될 advice 로 jsonExceptionTransfer 지정  <bean
		id="jsonExceptionTransfer"
		class="anyframe.iam.admin.common.web.JsonExceptionTransfer"/>

		<aop:config> <aop:pointcut id="serviceMethod" expression="execution(*
		notexist.*(..))" /> <aop:aspect ref="jsonExceptionTransfer" order="1">
		<aop:after-throwing throwing="exception" pointcut-ref="serviceMethod"
		method="transfer" /> </aop:aspect> </aop:config>
	-->

	<bean id="jsonExceptionTransferAdvice"
		class="anyframe.iam.admin.common.web.JsonExceptionTransferAdvice" />


	<!--
		Advice 와 Pointcut 을 함께 가지는 Advisor 중 기본이 되는 DefaultPointcutAdvisor 설정
	-->
	<bean id="jsonErrorAdvisor" class="org.springframework.aop.support.DefaultPointcutAdvisor">
		<property name="advice" ref="jsonExceptionTransferAdvice" />
		<!--
			여기서 Pointcut 을 설정하지 않으므로 기본으로 Pointcut.TRUE 에 의해 TruePointCut (모든
			class 에 매칭됨) 이 설정됨
		-->
	</bean>

</beans>